@model List<Empleado>

@{
    ViewData["Title"] = "PaginaGrupoEmpleados";
}

@{
    int numRegistros = (int)ViewData["Registros"];
    int numPagina = 1;
}

<h1>Pagina Grupo Empleados</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numRegistros; i += 3)
    {
        <li class="list-group list-group-item-success">
            <a asp-controller="Paginacion"
               asp-action="PaginaGrupoEmpleados"
               asp-route-posicion="@i">
                Página @numPagina  |
            </a>
        </li>
        numPagina += 1;
    }
</ul>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Apellido
            </th>
            <th>
                Oficio
            </th>
            <th>
                Salario
            </th>
            <th>
                IdDepartamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.IdEmpleado
            </td>
            <td>
                @item.Apellido
            </td>
            <td>
                @item.Oficio
            </td>
            <td>
                @item.Salario
            </td>
            <td>
                @item.IdDepartamento
            </td>
        </tr>
}
    </tbody>
</table>
